{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Python Backend and React Frontend",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/SRC/python-backend/app.py", // Path to your app.py
        "console": "integratedTerminal",
        "envFile": "${workspaceFolder}/SRC/python-backend/.env", // Specify the path to your .env file in the backend
        "env": {
          "FLASK_APP": "app.py", // Set any other environment variables if needed
          "FLASK_ENV": "development"
        },
        "justMyCode": true
      },
      {
        "name": "Run React Frontend",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/SRC/react-app/node_modules/.bin/react-scripts", // This points to the react-scripts binary
        "args": ["start"],  // Instead of 'npm run dev', use 'start' which runs the React development server
        "cwd": "${workspaceFolder}/SRC/react-app",  // Ensure the current working directory is the react-app folder
        "console": "integratedTerminal",
        "env": {
          "BROWSER": "none" // Optional: Prevents automatically opening the browser
        }
      }
    ]
  }
  